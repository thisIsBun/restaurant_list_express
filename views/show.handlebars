<h1 class='mb-1 restaurant-show-title'>{{restaurant.name}}</h1>
<div class='container'>
  <div class='row'>
    <div class="d-flex justify-content-end gap-2">
      <a href="/restaurants/{{restaurant._id}}/edit">
        <button type="button" class="btn btn-primary">編輯餐廳</button>
      </a>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        刪除餐廳
      </button>

      <!-- Modal -->
      <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="deleteModalLabel">刪除餐廳</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              確認刪除餐廳嗎?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
              <form action="/restaurants/{{restaurant._id}}/delete" class="m-0" method="POST">
                <button class="btn btn-danger py-1">確認</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-12 col-md-10 mx-auto'>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-utensils pr-2'></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-map-marker-alt pr-2'></i>
          地址：
        </span>
        {{restaurant.location}}
        <a
          href={{restaurant.google_map}}
          class='text-secondary'
          target='_blank'
        >
          <i class='fas fa-location-arrow pr-2 fa-xs'></i>
        </a>
      </p>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-mobile-alt pr-2'></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class='mb-5'>
        {{restaurant.description}}
      </p>

      <img
        class='rounded mx-auto d-block mb-4 w-100'
        src={{restaurant.image}}
        alt={{restaurant.name}}
        style='max-width: 600px;'
      />
    </div>
  </div>
</div>