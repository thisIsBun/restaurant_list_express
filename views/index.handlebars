<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/search'>
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='input-group mb-3'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            aria-describedby='search-button'
            value='{{keyword}}'
          />
          <button class='btn btn-info' type='submit' id='search-button'><i
              class='fas fa-search'
            ></i></button>
        </div>
      </form>
      <div class="text-end">
        <a href="/restaurants/new">
          <button type="button" class="btn btn-primary">新增餐廳</button>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='row row row-cols-1 row-cols-sm-3'>
        {{#each restaurantData}}
        <div class="col">
          <a href='/restaurants/{{this._id}}' class='text-secondary'>
            <div class='card mb-3'>
              <img class='card-img-top' src={{this.image}} alt={{this.name}} />
              <div class='card-body p-3'>
                <h6 class='card-title mb-1'>{{this.name}}</h6>

                <div class='restaurant-category mb-1'>
                  <i class='fas fa-utensils pr-2'></i>
                  {{this.category}}
                </div>

                <span class='badge rounded-pill bg-danger font-weight-normal'>
                  {{this.rating}}
                  <i class='fas fa-star fa-xs'></i>
                </span>

              </div>
              <div class="card-footer d-flex flex-row-reverse">
                <a href="/restaurants/{{this._id}}/edit" class="text-decoration-none">Edit</a>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>